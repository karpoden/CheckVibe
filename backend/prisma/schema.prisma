generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "sqlite"
  url      = "file:./dev.db"
}

model User {
  id          Int     @id @default(autoincrement())
  telegram_id String  @unique
  username    String
  audios      Audio[]
}

model Audio {
  id        Int      @id @default(autoincrement())
  title     String
  file_url  String
  createdAt DateTime @default(now())
  userId    Int
  user      User     @relation(fields: [userId], references: [id])
}